<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="za.co.knowbase.versioncheck"
      android:versionCode="1"
      android:versionName="1.0.2">
    <uses-sdk android:targetSdkVersion="10" android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="VersionListingActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ProgramDetailsActivity"></activity>
        <activity android:name="QuickPrefsActivity"></activity>
        <service android:name="BackgroundService"></service>        

    </application>
</manifest>
